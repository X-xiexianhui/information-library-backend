<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxu.informationLibrary.dao.dbManageDao">
    <update id="createDbDao">
        create database ${dbName};
    </update>
    <insert id="insertDbRecordDao">
        insert into db_info(db_name) values (#{dbName});
    </insert>
    <update id="deleteDbDao">
        drop database if exists ${dbName};
    </update>
    <delete id="deleteDbRecordDao">
        delete from db_info where db_name=#{dbName};
    </delete>
    <select id="getDbDao" resultType="com.gxu.informationLibrary.entity.dbInfo">
        select* from db_info where db_name=#{dbName};
    </select>
    <select id="getAllDbDao" resultType="dbInfo">
        select * from db_info;
    </select>
</mapper>