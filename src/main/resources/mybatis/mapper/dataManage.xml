<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gxu.informationLibrary.dao.dataManageDao">
    <insert id="insertData">
        insert into ${db_name}.${tb_name}(
        <foreach collection="col_names" index="index" item="item" separator=",">
            ${item.col_name}
        </foreach>
        ) values(
        <foreach collection="values" index="index" item="item" separator=",">
            ${item.value}
        </foreach>
        )
    </insert>
    <update id="updateData">
        <foreach collection="updates" item="item" index="index">
            update ${db_name}.${tb_name} set ${item.col_name}=#{item.value};
        </foreach>
    </update>
    <delete id="deleteData">
        update ${db_name}.${tb_name}
        set is_del=1
        where record_id = #{record_id};
    </delete>
    <select id="queryData">
        select * from ${db_name}.${tb_name}
        where
        <foreach collection="columns" item="item" index="index" separator="and">
            ${item.col_name} like concat('%',#{item.value},'%')
        </foreach>
        <if test="onlyAuth==true">and user_id=#{user_id}</if>
    </select>
</mapper>